# MCP Server Configuration
MCP_SERVER_NAME=mcp-raddar
MCP_LOG_LEVEL=INFO

# Sonarr Instances
# Format: SONARR_URL_{N} and SONARR_API_KEY_{N} where N is 1, 2, 3, etc.
SONARR_URL_1=http://sonarr:8989
SONARR_API_KEY_1=your_sonarr_api_key_here

# Uncomment for additional Sonarr instances
# SONARR_URL_2=http://sonarr-4k:8989
# SONARR_API_KEY_2=your_sonarr_4k_api_key_here

# Radarr Instances
# Format: RADARR_URL_{N} and RADARR_API_KEY_{N} where N is 1, 2, 3, etc.
RADARR_URL_1=http://radarr:7878
RADARR_API_KEY_1=your_radarr_api_key_here

# Uncomment for additional Radarr instances
# RADARR_URL_2=http://radarr-4k:7878
# RADARR_API_KEY_2=your_radarr_4k_api_key_here

# Request Configuration
REQUEST_TIMEOUT=30
REQUEST_MAX_RETRIES=3
REQUEST_BACKOFF_FACTOR=0.5
